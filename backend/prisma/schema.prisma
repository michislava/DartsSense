generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id           Int      @id @default(autoincrement())
  username          String
  email             String   @unique
  password          String
  registration_date DateTime @default(now())
  skill_level       Int?
  GameResult        GameResult[]

}
model Player {
  id        Int      @id @default(autoincrement())
  name      String
  throws    Throw[]  @relation("PlayerThrows")
}

model Throw {
  id        Int      @id @default(autoincrement())
  score     Int
  player    Player   @relation("PlayerThrows", fields: [playerId], references: [id])
  playerId  Int
}
// games model
model Game {
  game_id        Int      @id @default(autoincrement())
  game_date      DateTime @default(now())
  game_type      String   // New field added
  GameResult     GameResult[]
}

// game_results model
model GameResult {
  result_id   Int     @id @default(autoincrement())
  game_id     Int
  user_id     Int
  score       Int
  // Add the opposite relation field to Game model
  Game        Game    @relation(fields: [game_id], references: [game_id])
  User        User    @relation(fields: [user_id], references: [user_id])
}