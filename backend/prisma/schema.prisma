// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define the User model
model User {
  userId     Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  username   String   @unique
  email      String   @unique
  password   String
  deviceId   String?  // Device ID field after the password
  skillLevel String
  games      Game[]   @relation("Player1")
  games2     Game[]   @relation("Player2")
  userScores Score[]  @relation("UserScores")
}


// Define the Game model
model Game {
  gameId    Int     @id @default(autoincrement())
  name      String
  player1   User    @relation("Player1", fields: [player1Id], references: [userId])
  player1Id Int
  player2   User?   @relation("Player2", fields: [player2Id], references: [userId])
  player2Id Int?
  scores    Score[] // One-to-many relation: one game can have many scores
}

// Define the Score model
model Score {
  scoreId  Int      @id @default(autoincrement())
  points   Int
  datetime DateTime @default(now())
  player   User     @relation("UserScores", fields: [playerId], references: [userId])
  playerId Int
  game     Game     @relation(fields: [gameId], references: [gameId])
  gameId   Int
}
